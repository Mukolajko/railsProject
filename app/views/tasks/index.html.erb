<%= link_to "Home page", user_path(current_user.id) %>
<div id="all_tasks">
	<table id="task_table" class="tablesorter">
    <thead>
      <tr>
        <td>#</td>
        <td>Taskname</td>
        <td>Description</td>	
        <td>Usersintask</td>	
      </tr>
    </thead>
    <tbody>
  	  <% @all_tasks.each_with_index do |task, index|%>
        <tr>
      	  <td><%= index + 1 %></td>
      	  <td><%= link_to "#{task.taskname}", edit_user_task_path(current_user.id, task.id) %></td>
      	  <td><%= task.description %></td>
      	  <td><%= task.usersintask %></td>      	
        </tr> 
  	  <% end %>
    </tbody>
  </table>
  <%= will_paginate @all_tasks %>
</div>