<%= form_for [current_user, @task] do |f| %>
  <p>
    <%= f.label "Taskname" %>
    <%= f.text_field :taskname %>
  </p>
  <p>
    <%= f.label "Description" %>
    <%= f.text_area :description %>
  </p> 
  <%= render 'add_user_field' %> 
  <% if params[:action] == "new" %>   
    <div class="current_users">Current users in this task : 
    </div>
    <p class="button"><%= f.submit "Create task" %></p>
  <% else %>
    <div class="current_users">Current users in this task : 
      <% for user in @taskusers do %>
        <% if current_user.username != user.username %>
          <p class="<%= user.username %>"><%= user.username %>(<%= link_to_function "remove", "remove_user_from_task(this, #{@task.id}, '#{user.username}')"%>);</p>
        <% end %>
      <% end %>
    </div>
    <p class="button"><%= f.submit "Update task" %></p>
  <% end %>
<% end %> 
