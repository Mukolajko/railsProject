<table class="table">
        <tr>
          <td>#</td>
          <td class="sort"><%= sortable "taskname" %></td>
          <td class="sort"><%= sortable "description" %></td>
          <td class="sort"><%= sortable "status" %></td>
          <td>Usersintask</td>
          <td>Action</td>
        </tr>
    	  <% @all_tasks.each_with_index do |task, index|%>
          <tr>
        	  <td><%= index + 1 %></td>
        	  <td><%= link_to "#{task.taskname}", edit_user_task_path(current_user.id, task.id) %></td>
        	  <td><%= task.description %></td>
            <td><%= task.status %></td>
        	  <td><%= task.usersintask %></td>
            <td><%= link_to "Add task", add_user_path(:username => current_user.username, :task_id => task.id), :method => "POST" %></td> 
          </tr> 
    	  <% end %>
</table>
<%= will_paginate @all_tasks %>