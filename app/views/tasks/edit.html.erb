<div>
  <span>Current users in this task : <%= @users %></span><br />
  <button id="add_users">Add more users</button>
  <div class="hidden">
    <%= form_tag("/add_user") do %>
      <p>
        <%= label_tag "Username" %><br />
        <%= text_field_tag "username" %>
        <%= hidden_field_tag "task_id", @task.id %>
      </p>
      <p class="button"><%= submit_tag "Add" %></p>
    <% end %>
  </div>
</div>
<div>
  <%= form_for [current_user, @task] do |par| %>
    <p>
      <%= par.label "Taskname" %><br />
      <%= par.text_field :taskname %>
    </p>
    <p>
      <%= par.label "Description" %><br />
      <%= par.text_area :description %>
    </p>
    <p class="button"><%= par.submit "Update task" %></p>
  <% end %> 
</div>