<%= link_to "Home page", user_path(current_user.id) %>
<div>
  <p>Current users in this task : 
    <% for user in @users do %>
      <% if current_user.username != user %>
        <span><%= user %>(<%= link_to "remove", remove_user_path(current_user.id, @task.id, user)%>);</span>
      <% end %>
    <% end %>
  </p>
  <button id="add_users">Add more users</button>
  <div class="hidden">
    <%= form_tag("/add_user") do %>
      <p>
        <%= label_tag "Username" %><br />
        <%= text_field_tag "username" %>
        <%= hidden_field_tag "task_id", @task.id %>
      </p>
      <p class="button"><%= submit_tag "Add" %></p>
    <% end %>
  </div>
</div>
<div>
  <%= form_for [current_user, @task] do |par| %>
    <p>
      <%= par.label "Taskname" %><br />
      <%= par.text_field :taskname %>
    </p>
    <p>
      <%= par.label "Description" %><br />
      <%= par.text_area :description %>
    </p>
    <p>
      <%= par.label "Status" %>
      <%= par.select(:status, select_options) %>
    </p>
    <p class="button"><%= par.submit "Update task" %></p>
  <% end %> 
</div>